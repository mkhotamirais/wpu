<div class="row">
  <div class="col-md-8">
    <h2>Daftar Contact</h2>
    <a href="/contact/add" class="btn btn-primary mb-2">Tambah Kontak</a>
    <table class="table">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama</th>
          <th>No Hp</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length === 0) { %>
        <tr colspan="4">
          <td>
            <div class="alert alert-danger" role="alert">
              data kontak masuk kosong
            </div>
          </td>
        </tr>
        <% } %> <% let no = 1 %> <% contacts.forEach(contact => { %>
        <tr>
          <td><%= no++ %></td>
          <td><%= contact.nama %></td>
          <td><%= contact.noHp %></td>
          <td>
            <a
              href="/contact/<%= contact.nama %>"
              class="btn btn-success badge rounded-pill"
              ><i class="bi bi-info-circle"></i> detail</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
